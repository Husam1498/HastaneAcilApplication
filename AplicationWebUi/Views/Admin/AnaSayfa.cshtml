@{
}
@model List<User>
<div class="container">
    <div class="row ">
        <h1 class="text-center">Admin Sayfası</h1>
        <hr />
        <div class="col-4">
            <div class="Kart">
                <a class="KardButton" asp-action="Register" asp-controller="Kullanici"> Kullanıcı Oluştur</a>                            
            </div>
        </div>
        <div class="col-8">
            <h3 class="text-center">Kullanıcılar</h3>
            <hr />
            <div class="container">
                <div class="box">
                   
                    <div class="contentt">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Kullanıcı id</th>
                                    <th scope="col">Fullname</th>
                                    <th scope="col">UserName</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td>@item.Fullname</td>
                                        <td>@item.Username</td>
                                        <td>@item.Email</td>
                                        <td>@item.Role</td>
                                        <td>
                                            <a asp-controller="Kullanici" asp-action="KullaniciUpdate" asp-route-id="@item.UserId" class="btn btn-outline-info btn-sm">update</a>
                                            <a asp-controller="Kullanici" asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger btn-sm">Del</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
              
            </div>

        </div>
    </div>
</div>




