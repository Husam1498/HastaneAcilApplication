@{
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}
@model CreateHastaModel

<div id="body2">
    <div class="giris2">
        <div class="form-box">
          
            <form class="register" asp-controller="Hasta" asp-action="UpdateHasta">
                <p class="title">Hasta Günceleme </p>
                <div asp-validation-summary="All" class="message"></div>
                <input type="hidden" asp-for="@Model.HastaId" />

                <label>
                    <input class="input" asp-for="Fullname" value="@Model.Fullname">
                    <span>Fullname</span>
                </label>
                <label>
                    <input class="input" asp-for="DateofBirth" value="@ViewBag.hastabirth">
                    <span>DateofBirth</span>
                </label>
                <label>
                    <input class="input" asp-for="HastallikBikgisi" value="@Model.HastallikBikgisi">
                    <span>HastlıkBilgisi</span>
                </label>

                <label>
                    <select asp-items="@ViewBag.doktorlar" asp-for="DoktorId" class="selectBox" value="@Model.DoktorId">
                        <option disabled selected>Doktor Seçiniz</option>
                    </select>
                </label>
                <button type="submit" class="submit">Kaydet</button>
                <a class="submit" asp-action="HastaIndex" asp-controller="Hasta" style="text-align:center; text-decoration:none;">Geri dön</a>

            </form>

        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}