@{
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}
@model Doktor

<div id="body2">
    <div class="giris2">
        <div class="form-box">
            <h2>Welcome</h2>
            <p>Doktor Update</p>

            <form asp-controller="Doktor" asp-action="UpdateDoktor" methd="post">
                <input type="hidden" value="@Model.DoktorId" asp-for="DoktorId" />
                <div class="input-box">
                    @* <span class="icon"> <ion-icon name="mail-outline"></ion-icon></span> *@
                    <input type="text" asp-for="DoktorFUllname" value="@Model.DoktorFUllname" />
                    <label asp-for="DoktorFUllname" ></label>
                </div>
                <div class="input-box">
                    @* <label class="label" asp-for="AlanId"></label> *@
                    <select style="
                            width: 100%;
                            height:70%;
                            margin-top: 16px;
                            color: var(--darkprimary);"
                            asp-items="@ViewBag.alanlar" asp-for="AlanId">
                        <option disabled selected value="AlanId">Doktor Seçiniz</option>

                    </select>
                </div>
                <button type="submit" class="button">Kaydet</button>
            </form>
        </div>
    </div>
</div>
