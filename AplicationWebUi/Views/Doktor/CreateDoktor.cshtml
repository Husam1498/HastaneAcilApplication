@{
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}
@model Doktor

<div id="body2">
    <div class="giris2">
        <div class="form-box">
            
            <form class="register" asp-controller="Doktor" asp-action="CreateDoktor">
                <p class="title">Create Doktor </p>
                <div asp-validation-summary="All" class="message"></div>

                
                <label>
                    <input class="input" asp-for="DoktorFUllname">
                    <span>Fullname</span>
                </label>                  
               
                <label>
                    <select asp-items="@ViewBag.Alanname" asp-for="AlanId" class="selectBox">
                        <option disabled selected value="AlanId">Alan Seçiniz</option>                        
                    </select>
                </label>
                <button type="submit" class="submit">Kaydet</button>
                <button class="submit" asp-action="ListDoktor" asp-controller="Doktor">Geri dön</button>

            </form>

        </div>
    </div>
</div>