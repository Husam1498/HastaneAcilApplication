@{
    Layout = "~/Views/Shared/_BaslagicLayout.cshtml";
}

@model RegisterModel

<div id="body">
   
    <div class="giris2">
        <div class="form-box ">
            <form class="register" asp-controller="Kullanici" asp-action="Register">
                <p class="title">Register </p>
                <div class="flex">
                    <label>
                        <input class="input" asp-for="Fullname">                       
                        <span>Fullname</span>
                        <span asp-validation-for="Fullname" class="text-danger" style="font-size:10px"></span>
                    </label>

                    <label>
                        <input class="input" asp-for="Username">
                        <span>Username</span>
                        <span asp-validation-for="Username" class="text-danger" style="font-size:10px"></span>
                    </label>
                </div>

                <label>
                    <input class="input" asp-for="email">
                    <span>Email</span>
                    <span asp-validation-for="email" class="text-danger" style="font-size:10px"></span>
                </label>

                <label>
                    <input class="input" asp-for="Password">
                    <span>Password</span>
                    <span asp-validation-for="Password" class="text-danger" style="font-size:10px"></span>
                </label>
                <label>
                    <input class="input" asp-for="RePasword">
                    <span>Confirm password</span>
                    <span asp-validation-for="RePasword" class="text-danger" style="font-size:10px"></span>
                </label>
                <label>
                    <select asp-for="Role" class="selectBox">
                        <option disabled selected value="Role">Role Seçiniz</option>
                        <option value="admin">Admin</option>
                        <option value="sekreter">Sekreter</option>

                    </select>
                    <span asp-validation-for="Role" class="text-danger" style="font-size:10px"></span>
                </label>
                <button type="submit" class="submit" asp-action="Register" asp-controller="Kullanici">Kaydet</button>
                <a class="submit" asp-action="AnaSayfa" asp-controller="Admin" style="text-align:center; text-decoration:none;">Geri dön</a>
                
            </form>
            
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
