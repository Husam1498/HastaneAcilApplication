@{
    Layout = "~/Views/Shared/_BaslagicLayout.cshtml";
}

@model RegisterModel

<div id="body">
   
    <div class="giris2">
        <div class="form-box ">
            <form class="register" asp-controller="Kullanici" asp-action="Register">
                <p class="title">Register </p>
                <div asp-validation-summary="All" class="message"></div>
               
                <div class="flex">
                    <label>
                        <input class="input" asp-for="Fullname">
                        <span>Fullname</span>
                    </label>

                    <label>
                        <input class="input" asp-for="Username">
                        <span>Username</span>
                    </label>
                </div>

                <label>
                    <input class="input" asp-for="email">
                    <span>Email</span>
                </label>

                <label>
                    <input class="input" asp-for="Password">
                    <span>Password</span>
                </label>
                <label>
                    <input class="input" asp-for="RePasword">
                    <span>Confirm password</span>
                </label>
                <label>
                    <select asp-for="Role" class="selectBox">
                        <option disabled selected value="Role">Role Seçiniz</option>
                        <option value="admin">Admin</option>
                        <option value="sekreter">Sekreter</option>

                    </select>
                </label>
                <button class="submit" asp-action="Register" asp-controller="Kullanici">Kaydet</button>
                <button class="submit" asp-action="AnaSayfa" asp-controller="Admin">Geri dön</button>
                
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @if (ViewData["result"] != null)
    {
        <script>
            toastr["success"](@ViewData["message"], "Başarılı");
        </script>
    }

}


<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>