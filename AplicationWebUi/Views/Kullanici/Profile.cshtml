@{
}
<div class="text-center">
    <h3>Merhaba @ViewData["Fullname"] </h3>
    <hr />
</div>
<div class="row  py-2 ">
      
    <div class="col-6 offset-6 mb-2">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger "></div>
        </div>
    </div>

    <div id="body3" class="mt-2">

        <div class="giris2 p-4">

            <div class="col-6">
                <div class="text-center">
                    <h3>Profil fotografı Ayarları</h3>
                    <hr />
                </div>
                <form asp-action="ProfileChangeImage" method="post" enctype="multipart/form-data">

                    <div class="text-center mb-2">
                        <img src="~/Uploads/@ViewData["Profileİmage"]" class="img-thumbnail rounded-circle" style="width:100px; height:100px;" />
                    </div>
                    <label  class="form-label small">Profile image</label>
                    <input name="file" type="file" class="form-control" accept=".jpeg,.jpg,.png" />
                    <div>
                        <span class="small"> 
                            <i class="fa fa-info-circle fa-beat me-2"> </i> Only jpg,png
                        </span>
                    </div>
                    <div class="text-center mt-2">
                    <button class="KardButton" type="submit"><i class="fa-solid fa-floppy-disk me-1"> </i>Kaydet </button>

                    </div>
                        
                </form>
            </div>
            
            <div class="col-6 p-3 ">
               
                <div >
                   
                       
                 
                    <form asp-action="ProfileChangeFullname"  method="post">
                        <div class="form-group">
                            <div asp-validation-summary="All"></div>
                            <label class="form-label small ">Fullname</label>
                            <div class="input-group mb-3">
                                <input type="text" name="Fullname" class="form-control bg-info" value="@ViewData["Fullname"]" />
                                <button class="KardButton" type="submit"><i class="fa-solid fa-floppy-disk me-1"> </i>Save</button>

                            </div>
                        </div>

                    </form>
                </div>
                <div>

                    <form asp-action="ProfileChangeUsername" method="post">
                        <div class="form-group">
                            <label class="form-label small ">Username</label>
                            <div class="input-group mb-3">
                                <input type="text" name="Username" class="form-control bg-info" value="@ViewData["Username"]" />
                                <button class="KardButton" type="submit"><i class="fa-solid fa-floppy-disk me-1"> </i>Save</button>

                            </div>
                        </div>

                    </form>
                </div>
                <div>
                    <form asp-action="ProfileChangePassword" method="post">
                        <div class="row g-2 ">
                            <div class="col-sm mb-2">
                                <label class="form-label">Password</label>
                                <input name="Password" type="password" class="form-control bg-info">
                            </div>
                            <div class="col-sm mb-2">
                                <label class="form-label">RePassword</label>
                                <input name="RePassword" type="password" class="form-control bg-info">
                            </div>
                            
                            <button class="KardButton" type="submit"><i class="fa-solid fa-floppy-disk me-1"> </i>Save</button>  
                        </div>
                    
                    </form>
                   
                </div>
     

            </div>

        </div>
    </div>
      

</div>

