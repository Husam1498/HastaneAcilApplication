<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicationWebUi</title>
    <link rel="stylesheet" href="~/Csslerim/AnaSayfa.css" />
    <link rel="stylesheet" href="~/Csslerim/style.css">  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/toastr.js/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <header id="header">
        <div class="cont">
            <div class="arkplan">
                <nav class="main-nav">
                    <a href="index.html" class="logo">Hastahane</a>
                    <ul class="main-nav__items">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("sektreter"))
                            {
                                <li><a asp-controller="Hasta" asp-action="ListHasta">Hastalar</a></li>
                               
                            }                    
                          
                            @if (User.IsInRole("admin"))
                            {
                                <li><a asp-controller="Admin" asp-action="AnaSayfa">Admin</a></li>
                                <li><a asp-controller="AcilServiAlan" asp-action="AcilServisIndex">Alanlar</a></li>
                                <li><a asp-controller="Doktor" asp-action="DoktorIndex">Doktor</a></li>
                                <li><a asp-controller="Hasta" asp-action="HastaIndex">Hastalar</a></li>
                            }
                            <li><a asp-controller="Kullanici" asp-action="Profile"><img src="~/Uploads/@User.FindFirst("ProfilFoto").Value" class="rounded-circle" style="width:30px; height:30px;" /> @User.FindFirst("Username").Value </a></li>
                            <li><a asp-controller="Kullanici" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket fa-sm"></i> Logout</a></li>
                          
                        }
                        else
                        {
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Kullanici" asp-action="Login"><i class="fa-solid fa-right-to-bracket fa-flip fa-sm" style="--fa-animation-duration: 2s;"></i> Login</a></li>
                           
                        }                 
                    </ul>
                </nav>
            </div>
        </div>
      
    </header>
    <main >
        <div class="container">
            @RenderBody()
        </div>
       
    </main>

    <footer class="footer arkplan">
        <div class="container">
            &copy; 2024 - AplicationWebUi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://kit.fontawesome.com/ac72e5463b.js" crossorigin="anonymous"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

